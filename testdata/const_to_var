-- apply.patch --
@@
var name identifier
var value expression
@@
-const (
+var (
   name = value
 )

-- top_level.in.go --
package foo

const (
	Foo = "hello"
)

-- top_level.out.go --
package foo

var (
	Foo = "hello"
)


-- remove_all.in.go --
package main

import (
	"conversion/to.git"
)

func foo(s string) *bool {
	if to.StrPtr(s) == nil {
		return to.BoolPtr(false)
	}

	return to.BoolPtr(true)
}

-- remove_all.out.go --
package main

import "go.uber.org/thriftrw/ptr"

func foo(s string) *bool {
	if ptr.String(s) == nil {
		return ptr.Bool(false)
	}

	return ptr.Bool(true)
}


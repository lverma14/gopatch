Replaces redundant use of fmt.Errorf with errors.New.

// TODO(abg): Collapse Sprintf into Errorf.

-- errorf.patch --
@@
var s expression
@@
-import "fmt"
+import "errors"

-fmt.Errorf(s)
+errors.New(s)

-- replace.in.go --
package foo

import "fmt"

func Do() error {
	return fmt.Errorf("great sadness")
}

-- replace.out.go --
package foo

import "errors"

func Do() error {
	return errors.New("great sadness")
}

-- replace.diff --
@@ -1,7 +1,7 @@
 package foo
 
-import "fmt"
+import "errors"
 
 func Do() error {
-	return fmt.Errorf("great sadness")
+	return errors.New("great sadness")
 }

-- leave_sprintf.in.go --
package bar

import "fmt"

const _thing = "thing"

func Do() error {
	return fmt.Errorf(fmt.Sprintf("%v failed", _thing))
}

-- leave_sprintf.out.go --
package bar

import (
	"errors"
	"fmt"
)

const _thing = "thing"

func Do() error {
	return errors.New(fmt.Sprintf("%v failed", _thing))
}

-- leave_sprintf.diff --
@@ -1,9 +1,12 @@
 package bar
 
-import "fmt"
+import (
+	"errors"
+	"fmt"
+)
 
 const _thing = "thing"
 
 func Do() error {
-	return fmt.Errorf(fmt.Sprintf("%v failed", _thing))
+	return errors.New(fmt.Sprintf("%v failed", _thing))
 }
